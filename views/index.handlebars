<div class="jumbotron">
    <h1>Eat the Burger!</h1>
</div>

<div class="left">
    <h2>Burgers!</h2>
    <ul>
        {{#each burger}} {{#unless devoured}}
        <p>
            {{this.burger_name}}
            <button data-id="{{this.id}}" class="devourBurger">Devour</button>
            <button data-id="{{this.id}}" class="deleteBurger">Remove</button>
        </p>
        {{/unless}} {{/each}}
    </ul>
</div>

<div class="right">
    <h2>Devoured Burgers!</h2>
    <ul>
        {{#each burger}} {{#if devoured}}
        <p>
            {{this.burger_name}}
            <button data-id="{{this.id}}" class="deleteBurger">Remove</button>
        </p>
        {{/if}} {{/each}}
    </ul>
</div>


<form class="create-form">
    <div class="form-group">
        <label for="burg"></label>
        <textarea id="burg" name="burger" rows="8" cols="30"></textarea>
    </div>

    <button type="submit">Add Burger</button>
    Enter a burger you would like to eat and click the "Add Burger" button.
</form>